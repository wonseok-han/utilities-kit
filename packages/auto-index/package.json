{
  "name": "@repo/auto-index",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "auto-index": "./bin/auto-index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "watch": "auto-index --watch",
    "lint": "eslint . --fix --max-warnings 0",
    "check-types": "tsc --noEmit",
    "start": "node bin/auto-index.js",
    "test": "node bin/auto-index.js --watch --exportStyle=star-as --fileExtensions=.tsx,.ts --fromWithExtension=true --outputFile=test.ts --namingConvention=PascalCase --paths=src",
    "clean": "rm -rf dist"
  },
  "autoIndex": {
    "targets": [
      {
        "paths": [
          "src"
        ],
        "fileExtensions": [
          ".tsx",
          ".ts"
        ],
        "outputFile": "index.ts",
        "exportStyle": "auto",
        "excludes": [
          "*.d.ts"
        ]
      }
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "eslint": "^9.30.0",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "chokidar": "^3.6.0"
  }
}

{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@api": ["./src/api"],
      "@api/*": ["./src/api/*"],
      "@app": ["./src/app"],
      "@app/*": ["./src/app/*"],
      "@assets": ["./public/assets"],
      "@assets/*": ["./public/assets/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@constants": ["./src/constants"],
      "@constants/*": ["./src/constants/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@services": ["./src/services"],
      "@services/*": ["./src/services/*"],
      "@store": ["./src/store"],
      "@store/*": ["./src/store/*"],
      "@typings": ["./src/types"],
      "@typings/*": ["./src/types/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@": ["./src"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/types/svgr.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
